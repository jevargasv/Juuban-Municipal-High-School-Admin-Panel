<div class="container">
  <%=bootstrap_form_for admin, remote: true, authenticity_token: true, data: { type: :script } do |f| %>
    <%= f.url :photo_url, placeholder: "Photo" %>
    <%= f.text_field :first_name, placeholder: "First Name" %>
    <%= f.text_field :last_name, placeholder: "Last Name" %>
    <%= f.text_field :username, placeholder: "Username" %>
    <%= f.fields_for :user do |p| %>
        <%= p.text_field :email, placeholder: "E-mail" %>
        <%= p.password_field :password, placeholder: "Password" %>
    <% end %>
    <%= f.submit "Add Admin", class: "btn btn-success" %>
  <% end %>
</div>