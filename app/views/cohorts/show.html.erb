<div id="content-wrapper">
<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
    <li class="breadcrumb-item">Cohorts</li>
    <li class="breadcrumb-item active">View</li>
  </ol> 
  
<% @teacher = Teacher.find(@cohort.teacher_id) %>
<div class="container">
  <div class="card w-100">
   <div class="card-body">
    <h3 class="cohort-profile"> <%= @cohort.name %> </h3>
    <br>
    <h3> ID:  <%= @cohort.id %> </h3>
    <br>
    <h3> Course Name:  <%= @course.name %> </h3>
    <br>
    <h3> Teacher:  <%= @teacher.first_name %> <%= @teacher.last_name %> </h3>
    <br>
    <h3> Start Date:  <%= @cohort.start_date %> </h3>
    <br>
    <h3> End Date:  <%= @cohort.end_date %> </h3>
    <br>
    <%= link_to("Go Back", cohorts_path, class: 'btn btn-secondary') %> &nbsp;&nbsp; <%= link_to "Edit", edit_cohort_path(@cohort), class: 'btn btn-warning' %>
    <br>
   </div>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="card w-100">
   <div class="card-body">
   <h3 class="student-cohort">Add Student to Cohort</h3>
   <br>
 <%= bootstrap_form_for cohort_path do |f| %>
    <%= f.select :student_id, Student.all.map{|x| [x.first_name + ' ' + x.last_name, x.id]} %>
    <%= f.number_field :age, placeholder: "Age" %>
    <%= f.text_field :date_of_birth, placeholder: "Month Date, Year" %>
    <%= f.text_field :year, placeholder: "Year" %>
    <br>
    <%= f.submit "Add to Cohort", class: "btn btn-success" %> 
 <% end %>
 <br>
 <br>
    </div>
  </div>
</div>
<br>
<br>
<center><h3 class="student-cohort-table"> Student Cohort Roster </h3>
<br>
<table class="table table-hover">
  <tr>
    <td width="30%" scope="col">ID</td>
    <td width="30%" scope="col">Student Name</td>
    <td width="30%" scope="col">Age</td>
    <td width="30%" scope="col">Date of Birth</td>
    <td width="30%" scope="col">Year</td>
  </tr>
  <tr>
  <% @students = StudentCohort.where(cohort_id: @cohort.id) %>
     <td scope="row"><%= @student.id %></td>
     <td><%= @student.first_name %> <%= @student.last_name %></td>
     <td><%= @student.age %></td>
     <td><%= @student.date_of_birth %></td>
     <td><%= @student.year %></td>
</table>
</div>
</div></center>