<div id="content-wrapper">
<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
    <li class="breadcrumb-item">Courses</li>
    <li class="breadcrumb-item active">Add</li>
  </ol> 

<div class="container">
  <div class="card w-100">
   <div class="card-body">
  <%=bootstrap_form_for @course do |f| %>
    <%= f.hidden_field :course_id, value: params[:id] %>
    <%= f.text_field :name, placeholder: "Course Name" %>
    <%= f.text_field :location, placeholder: "Location" %>
    <%= f.text_field :description, placeholder: "Description" %>
    <%= f.text_field :class_hours, placeholder: "Class Hours" %>
    <br>
    <%= f.submit "Add Course", class: "btn btn-success" %> &nbsp;&nbsp; <%= link_to("Go Back", courses_path, class: 'btn btn-secondary') %>
  <% end %>
 </div>
</div>
<br>
</div>
</div>