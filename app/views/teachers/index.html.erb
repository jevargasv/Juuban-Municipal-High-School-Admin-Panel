<h3 class="teacher-table"> Teacher Roster </h3>
 <table class="table table-hover">
  <thead>
   <tr>
    <th scope="col">ID</th>
    <th scope="col">Photo</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <% if user_signed_in? && current_user.user_type_type == "Admin" || @teacher.id == current_user.user_type_type %>
    <th scope="col">Age</th>
    <th scope="col">Date of Birth</th>
    <% end %>
    <th scope="col">Fair</th>
    <th scope="col">Salary</th>
    <th scope="col">Education</th>
    <th scope="col">Subject</th>
    <th scope="col">Username</th>
    <th>View<th>
    <th>Add</th>
    <th>Edit</th>
    <th>Delete</th>
   </tr>
  </thead>
  <tbody>
   <% @teachers.each do |teacher| %>
    <tr>
     <td scope="row"><%= teacher.id %></td>
     <td><%= teacher.photo_url %></td>
     <td><%= teacher.first_name %></td>
     <td><%= teacher.last_name %></td>
     <% if user_signed_in? && current_user.user_type_type == "Admin" || @teacher.id == current_user.user_type_type %>
     <td><%= teacher.age %></td>
     <td><%= teacher.date_of_birth %></td>
     <% end %>
     <td><%= teacher.fair %></td>
     <td><%= teacher.salary %></td>
     <td><%= teacher.education %></td>
     <td><%= teacher.subject %></td>
     <td><%= teacher.username %></td>
     <% if user_signed_in? && current_user.user_type_type == "Admin" || @teacher.id == current_user.user_type_type %>
     <td><%= link_to("View", "/teachers/<%=teacher.id%>") %></td>
     <td><%= link_to("Add", "/teachers/new") %></td>
     <td><%= link_to("Edit", "/teachers/<%teacher.id%>/edit") %></td>
     <td><%= link_to("Delete", teacher_path(@teacher), method: :delete, data: {confirm: 'Are you certain about deleting this teacher?'} %></td>
    </tr>
   <% end %>
   <% end %>
  </tbody>
  </table>